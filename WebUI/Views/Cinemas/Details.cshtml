@model Cinema

@{
    ViewData["Title"] = "Cinema Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h4 class="text-info">Details for @Model.Name</h4>
        </p>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" id="CinemaLogoPreview" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group mb-3 border-danger">
                    <p>@Model.Description</p>
                </div>
                <div class="form-group"> 
                    <a class="btn btn-outline-primary" asp-action="Index">Show All</a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            let image = document.getElementById('CinemaLogoPreview');
            image.classList.add("img-actordetails-dimensions");
            image.src = "/images/cinemas/" + $("#Logo").val();
        });
    </script>
}